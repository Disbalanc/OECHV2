<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp.CreateAccountActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="342dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="196dp"
            android:layout_height="30dp"
            android:text="Create an account"
            android:textSize="24sp" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="16dp"
            android:textColor="@color/Gray_2"
            android:text="Complete the sign up process to get started" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="275dp"
            android:layout_height="16dp"
            android:text="Full name"
            android:textColor="@color/Gray_2" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_round"
            android:padding="10dp"
            android:hint="Ivanov Ivan"
            android:inputType="textPersonName"
            android:textColor="@color/Gray_3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:text="Phone Number"
            android:textColor="@color/Gray_2" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_round"
            android:hint="+7(999)999-99-99"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/Gray_3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:text="Email Address"
            android:textColor="@color/Gray_2" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_round"
            android:hint="***********@mail.ru"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/Gray_3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:text="Password"
            android:textColor="@color/Gray_2" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_round"
            android:hint="***********"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/Gray_3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:text="Confim password"
            android:textColor="@color/Gray_2" />

        <EditText
            android:id="@+id/et_confimPassword"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_round"
            android:hint="***********"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/Gray_3"
            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_visiblePass"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="360dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/eye_slash"
        android:onClick="iv_passVisible"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_visiblePass2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="440dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/eye_slash"
        android:onClick="iv_passVisible2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="342dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <CheckBox
            android:id="@+id/cb_terms"
            android:layout_width="20dp"
            android:buttonTint="@color/Gray_2"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:text="By ticking this box, you agree to our Terms and conditions and private policy"
            android:textAlignment="center" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_SignUp"
        android:layout_width="342dp"
        android:layout_height="82dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/btn_signUp"
            android:layout_width="342dp"
            android:layout_height="46dp"
            android:background="@drawable/button_round"
            android:backgroundTint="@color/Primary"
            android:onClick="btn_signUp"
            android:padding="12dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btn_signIn"
                android:text="Sign In"
                android:textColor="@color/Primary" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_SignUp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or sign in using"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:onClick="btn_thirdAccount"
            android:src="@drawable/akar_icons_google_contained_fill"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>