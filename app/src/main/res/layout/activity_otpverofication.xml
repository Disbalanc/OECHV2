<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn.password.OTPVeroficationActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="115dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="OTP Verification"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/Gray_2"
            android:text="Enter the 6 digit numbers sent to your email"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <EditText
            android:id="@+id/et_oeNum"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/edit_text_round"
            android:inputType="number"/>
        <EditText
            android:id="@+id/et_twoNum"
            android:layout_width="32dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text_round"
            android:layout_height="32dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/et_threeNum"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text_round"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/et_fourNum"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text_round"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/et_fiveNum"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text_round"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/et_sixNum"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text_round"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="If you didnâ€™t receive code, " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="recend after 1:00" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_setNewPass"
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/Gray_2"
        android:enabled="false"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="80dp"
        android:onClick="btn_setNewPass"
        android:padding="12dp"
        android:text="Set New Password"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>